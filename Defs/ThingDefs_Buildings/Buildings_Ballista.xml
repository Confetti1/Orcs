<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BaseArtilleryBuilding">
    <defName>BallistaBase</defName>
    <label>ballista base</label>
    <description>A large, stationary crossbow that fires huge, specialized bolts. It's fairly accurate for it's distance, but it requires someone to man it in order to aim and reload it.</description>
    <comps>
    </comps>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Buildings/Ballista_Base</texPath>
    </graphicData>
    <costStuffCount>30</costStuffCount>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <costList>
      <WoodLog>150</WoodLog>
      <Steel>60</Steel>
    </costList>
    <designationHotKey>Misc4</designationHotKey>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <researchPrerequisites>
      <li>Ballista</li>
    </researchPrerequisites>
    <building>
      <turretGunDef>Ballista</turretGunDef>
      <buildingTags>
        <li>Artillery_BaseDestroyer</li>
        <li>Artillery_MannedMortar</li>
      </buildingTags>
    </building>
  <uiIconPath>Buildings/BallistaTop</uiIconPath>
  <uiIconScale>0.9</uiIconScale>
</ThingDef>

  <ThingDef ParentName="BaseArtilleryWeapon">
    <defName>Ballista</defName>
    <label>ballista</label>
    <description>A large, stationary crossbow that fires huge, specialized bolts. It's fairly accurate for it's distance, but it requires someone to man it in order to aim and reload it.</description>
    <graphicData>
      <texPath>Buildings/BallistaTop</texPath>
    </graphicData>
    <weaponTags>
      <li>Artillery_BaseDestroyer</li>
    </weaponTags>
    <statBases>
      <AccuracyTouch>0.5</AccuracyTouch>
      <AccuracyShort>0.7</AccuracyShort>
      <AccuracyMedium>0.8</AccuracyMedium>
      <AccuracyLong>0.7</AccuracyLong>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <defaultProjectile>Bullet_BallistaBolt</defaultProjectile>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <warmupTime>4.0</warmupTime>
        <requireLineOfSight>true</requireLineOfSight>
        <minRange>5</minRange>
        <range>100</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>Mortar_LaunchA</soundCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_ChangeableProjectile" />
    </comps>
    <building>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>Manufactured</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <filter>
          <categories>
            <li>Manufactured</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_BallistaBolt</defName>
    <label>ballista bolt</label>
    <graphicData>
      <texPath>Buildings/BallistaBolt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>40</damageAmountBase>
      <speed>88</speed>
    </projectile>
  </ThingDef>

</Defs>
