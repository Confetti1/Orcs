<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BenchBase">
    <defName>WondrousWorkshop</defName>
    <label>wondrous workshop</label>
    <description>A magical table with the tools needed to extract magical energies from gold and infuse ordinary objects with it to create wondrous items.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Buildings/WondrousWorkshop</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3.5,1.5)</drawSize>
      <shadowData>
        <volume>(2.9, 0.3, 0.5)</volume>
        <offset>(0, 0, 0)</offset>
      </shadowData>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <costList>
      <Steel>50</Steel>
      <WoodLog>50</WoodLog>
    </costList>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>75</costStuffCount>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>2500</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-5</Cleanliness>
    </statBases>
    <size>(3,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <recipes>
      <li>SynthesizeGoldFromWood</li>
    </recipes>
    <researchPrerequisites>
      <li>MagicCrafting</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
  <!--  <designationHotKey>Misc2</designationHotKey> -->
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
      <li>PlaceWorker_ReportWorkSpeedPenalties</li>
    </placeWorkers>
  </ThingDef>
  
  <RecipeDef>
    <defName>SynthesizeGoldFromWood</defName>
    <label>synthesize gold from wood</label>
    <description>Create gold from wood using the power of alchemy. Doing so takes a while and uses up a lot of wood, but can be worth it if you are short on gold.</description>
    <jobString>Synthesizing gold from wood.</jobString>
    <workAmount>10000</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <targetCountAdjustment>10</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>100</count>
      </li>
    </ingredients>
    <products>
      <Gold>1</Gold>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Gold</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>
  
  <WorkGiverDef>
    <defName>DoBillsWondrousWorkbench</defName>
    <label>craft items</label>
    <giverClass>WorkGiver_DoBill</giverClass>
    <workType>Crafting</workType>
    <priorityInType>10</priorityInType>
    <fixedBillGiverDefs>
      <li>WondrousWorkbench</li>
    </fixedBillGiverDefs>
    <verb>craft</verb>
    <gerund>crafting</gerund>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
    <prioritizeSustains>true</prioritizeSustains>
  </WorkGiverDef>
  
</Defs>
