		<defName>OrcSettings</defName>
		<pawnKindSettings>
			<alienslavekinds>
				<li>
					<kindDefs>
						<li>Orc_Tribal</li>
						<li>Orc_Colonist</li>
					</kindDefs>
					<chance>50.0</chance>
				</li>	
			</alienslavekinds>
			<alienrefugeekinds>
				<li>
					<kindDefs>
						<li>Orc_Tribal</li>
						<li>Orc_Colonist</li>
					</kindDefs>
					<chance>20.0</chance>
				</li>
			</alienrefugeekinds>
			<startingColonists>
				<li>
					<pawnKindEntries>
						<li>
							<kindDefs>
								<li>Orc_Colonist</li>
							</kindDefs>
							<chance>10.0</chance>
						</li>
					</pawnKindEntries>
					<factionDefs>
						<li>PlayerColony</li>
					</factionDefs>
				</li>
			</startingColonists>
						
		</pawnKindSettings>
	</AlienRace.RaceSettings>
</Defs>
