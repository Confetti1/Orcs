<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <AlienRace.ThingDef_AlienRace ParentName="BasePawn">
        <defName>Orc</defName>
        <label>orc</label>
        <description>Orcs tend to be stronger and tougher than humans, but tend to be reckless and easy to provoke. They have no qualms over eating humanlikes. Some orcs are raised in cities and develop much more peacefully, however. Orcs tend to have shorter lifespans than most other races. Thanks to darkvision, orcs do not care about being in the dark (though they may still work slower).</description>
        <alienRace>
  	    
	    <graphicPaths>
		<li>
			<body>Orc/Bodies/</body>
			<head>Orc/Heads/</head>
		</li>
	    </graphicPaths>
            
	    <hairSettings>
                <hasHair>true</hasHair>
                <getsGreyAt>40</getsGreyAt>
            </hairSettings>
		
            <generalSettings>
                <maleGenderProbability>0.6</maleGenderProbability>
                <immuneToAge>false</immuneToAge>
                <humanRecipeImport>true</humanRecipeImport>
                <canLayDown>true</canLayDown>
		    
                <forcedRaceTraitEntries>
                    	<li>
                        	<defName>Bloodlust</defName>
                        	<chance>30</chance>
                	</li>
			<li>
				<defName>Brawler</defName>
				<chance>30</chance>
			</li>
                </forcedRaceTraitEntries>
		    
                <disallowedTraits>
                </disallowedTraits>
                
                <traitCount>1</traitCount>
                <additionalTraits>0~1</additionalTraits>
                
		<factionRelations>
			<li>
				<factions>
					<li>RuggedOrcTribe</li>
				</factions>
				<goodwill>
					<min>-50</min>
					<max>100</max>
				</goodwill>
			</li>
		    </factionRelations>
		    
                <maxDamageForSocialfight>6</maxDamageForSocialfight>
                <allowHumanBios>true</allowHumanBios>
                <immuneToXenophobia>false</immuneToXenophobia>
                <minAgeForAdulthood>15</minAgeForAdulthood>
                
                <alienPartGenerator>	
			
               	    <alienbodytypes>
			<li>Hulk</li>
                        <li>Male</li>
			<li>Female</li>
                    </alienbodytypes>
			
                    <aliencrowntypes>
			    <li>Average_Wide</li>
			    <li>Narrow_Wide</li>
                    </aliencrowntypes>
			
                    <useGenderedHeads>true</useGenderedHeads>
                    <useGenderedBodies>false</useGenderedBodies>
                    
                    <colorChannels>
                        <li>
                            <name>skin</name>
                            <first Class="ColorGenerator_Options">
                                <options>
                                    <li>
                                        <weight>10</weight>
                                        <only>RGBA(125, 155, 125, 255)</only>
                                    </li>
                                    <li>
                                        <weight>10</weight>
                                        <only>RGBA(110, 120, 120, 255)</only>
                                    </li>
                                    <li>
                                        <weight>10</weight>
                                        <only>RGBA(100, 110, 100, 255)</only>
                                    </li>
                                </options>
                            </first>
                            <second Class="ColorGenerator_Options">
                                <options>
                                    <li>
                                        <weight>10</weight>
                                        <only>RGBA(230, 255, 230, 255)</only>
                                    </li>
                                </options>
                            </second>
                        </li>
                    </colorChannels>
                    <customDrawSize>(1.1, 1.1)</customDrawSize>
		    <customHeadDrawSize>(1.0, 1.0)</customHeadDrawSize>
		    <headOffset>(0.0, 0.05)</headOffset>
                </alienPartGenerator>
            </generalSettings>
	
            <thoughtSettings>
                <cannotReceiveThoughts>
                    <li>ButcheredHumanlikeCorpse</li>
                    <li>KnowButcheredHumanlikeCorpse</li>
                    <li>AteHumanlikeMeatAsIngredient</li>
                    <li>EnvironmentDark</li>
                </cannotReceiveThoughts>
                <replacerList>
                        <li>
                                <original>AteHumanlikeMeatDirect</original>
                                <replacer>AteRawFood</replacer>
                        </li>
                </replacerList>
                <butcherThoughtSpecific>
                        <li>
                                <raceList>
                                        <li>Orc</li>
                                </raceList>
                                <thought>ButcheredAnOrc</thought>
                                <knowThought>KnowButcheredAnOrc</knowThought>
                        </li>
                </butcherThoughtSpecific>
                <ateThoughtSpecific>
                        <li>
                                <raceList>
                                        <li>Orc</li>
                                </raceList>
                                <thought>AteOrcMeatDirect</thought>
                                <ingredientThought>AteOrcMeatAsIngredient</ingredientThought>
                        </li>
                </ateThoughtSpecific>
            </thoughtSettings>
		
            <compatibility>
                <isFlesh>true</isFlesh>
                <isSentient>true</isSentient>
                <hasBlood>true</hasBlood>
            </compatibility>
		
        </alienRace>
        <race>
		
            	<thinkTreeMain>Humanlike</thinkTreeMain>
		<thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
		<intelligence>Humanlike</intelligence>
		<makesFootprints>true</makesFootprints>
		<lifeExpectancy>50</lifeExpectancy>
		<leatherDef>Leather_Human</leatherDef>
		<nameGenerator>NamerPersonOrc</nameGenerator>
		<body>Human</body>
		<baseBodySize>1.0</baseBodySize>
		<baseHealthScale>1.2</baseHealthScale>
		<foodType>OmnivoreHuman</foodType>
		<gestationPeriodDays>45</gestationPeriodDays>
		<meatMarketValue>0.8</meatMarketValue>
		<manhunterOnDamageChance>0.20</manhunterOnDamageChance>
		<manhunterOnTameFailChance>0.02</manhunterOnTameFailChance>
		
		<litterSizeCurve>
			<points>
				<li>(0.5, 0)</li>
				<li>(1, 1)</li>
				<li>(1.01, 0.02)</li>
				<li>(3.5, 0)</li>
			</points>
		</litterSizeCurve>
		
		<lifeStageAges>
			<li>
				<def>HumanlikeBaby</def>
				<minAge>0</minAge>
			</li>
			<li>
				<def>HumanlikeToddler</def>
				<minAge>1</minAge>
			</li>
			<li>
				<def>HumanlikeChild</def>
				<minAge>3</minAge>
			</li>
			<li>
				<def>HumanlikeTeenager</def>
				<minAge>10</minAge>
			</li>
			<li>
				<def>HumanlikeAdult</def>
				<minAge>15</minAge>
			</li>
				<!-- HAR lets you do something like the below which should change the Body Def at that life stage, not the Body Type. -->
				<!--<li Class="AlienRace.LifeStageAgeAlien">
					<def>AlienAdult</def>
					<minAge>18</minAge>
					<body>AdultAlienBody</body>
				</li> -->
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
			<soundMeleeDodge>Pawn_MeleeDodge</soundMeleeDodge>
		
			<specialShadowData>
				<volume>(0.3, 0.8, 0.4)</volume>
				<offset>(0,0,-0.3)</offset>
			</specialShadowData>
		
			<ageGenerationCurve>
				<points>
					<li>(11,0)</li>
					<li>(13,100)</li>
					<li>(30,100)</li>
					<li>(37,30)</li>
					<li>(40,18)</li>
					<li>(43,10)</li>
					<li>(50,3)</li>
					<li>(52,0)</li>
				</points>
			</ageGenerationCurve>
		</race>
        
        <statBases>
            <MarketValue>2000</MarketValue>
            <MoveSpeed>4.6</MoveSpeed>
            <ComfyTemperatureMin>10</ComfyTemperatureMin>
            <ComfyTemperatureMax>26</ComfyTemperatureMax>
            <LeatherAmount>60</LeatherAmount>
            <RoyalFavorValue>3</RoyalFavorValue>
        </statBases>
        
        <tools Inherit="False">
             <li>
                 <label>left fist</label>
                 <capacities>
                     <li>Blunt</li>
                 </capacities>
                 <power>9</power>
                 <cooldownTime>2</cooldownTime>
                 <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
                 <surpriseAttack>
                     <extraMeleeDamages>
                         <li>
                             <def>Stun</def>
                             <amount>14</amount>
                         </li>
                     </extraMeleeDamages>
                 </surpriseAttack>
             </li>
             <li>
                 <label>right fist</label>
                 <capacities>
                     <li>Blunt</li>
                 </capacities>
                 <power>9</power>
                 <cooldownTime>2</cooldownTime>
                 <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
                 <surpriseAttack>
                     <extraMeleeDamages>
                         <li>
                             <def>Stun</def>
                             <amount>14</amount>
                         </li>
                     </extraMeleeDamages>
                 </surpriseAttack>
            </li>
            <li>
                <label>teeth</label>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>8.2</power>
                <cooldownTime>1.5</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.5</chanceFactor>
                <soundMeleeHit>Pawn_Melee_HumanBite_Hit</soundMeleeHit>
                <soundMeleeMiss>Pawn_Melee_HumanBite_Miss</soundMeleeMiss>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>5</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        
        <recipes>
        </recipes>
        
        <comps>
        </comps>
        
        <modExtensions>
        </modExtensions>
	    
    </AlienRace.ThingDef_AlienRace>
