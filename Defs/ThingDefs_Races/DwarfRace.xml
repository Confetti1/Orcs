<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <AlienRace.ThingDef_AlienRace ParentName="BasePawn">
        <defName>Dwarf</defName>
        <label>dwarf</label>
        <description>Dwarves are a stoic race that typically live in cities carved out from mountains. They tend to be skilled in crafting and mining, and are renowned for their smithing.</description>
        <alienRace>
  	    
	    <graphicPaths>
		<li>
			<body>Dwarf/Bodies/</body>
			<head>Dwarf/Heads/</head>
		</li>
	    </graphicPaths>
            
	    <hairSettings>
                <hasHair>True</hasHair>
		<hairTags>
			<li>Dwarf</li>
		</hairTags>
            </hairSettings>
		
            <generalSettings>
                <maleGenderProbability>0.5</maleGenderProbability>
                <immuneToAge>false</immuneToAge>
                <humanRecipeImport>true</humanRecipeImport>
                <canLayDown>true</canLayDown>
		    
                <forcedRaceTraitEntries>
                  <li>
                     <defName>Industriousness</defName>
                     <degree>1</degree>
                     <chance>30</chance>
                	</li>
                  <li>
                     <defName>Industriousness</defName>
                     <degree>2</degree>
                     <chance>30</chance>
                	</li>
                </forcedRaceTraitEntries>
		    
                <disallowedTraits>
                </disallowedTraits>
                
                <traitCount>1</traitCount>
                <additionalTraits>1~2</additionalTraits>
		    
                <maxDamageForSocialfight>6</maxDamageForSocialfight>
                <allowHumanBios>true</allowHumanBios>
                <immuneToXenophobia>false</immuneToXenophobia>
                <minAgeForAdulthood>40</minAgeForAdulthood>
                
                <alienPartGenerator>				
               	    <alienbodytypes>
		      <li>Male</li>
                      <li>Male</li>
                      <li>Fat</li>
                    </alienbodytypes>
			
                    <aliencrowntypes>
                       <li>Average_Normal</li>
                       <li>Average_Wide</li>
                    </aliencrowntypes>
			
                    <useGenderedHeads>true</useGenderedHeads>
                    <useGenderedBodies>false</useGenderedBodies>
			
		    <customDrawSize>(1.08, 0.85)</customDrawSize>
		    <customHeadDrawSize>(1, 1)</customHeadDrawSize>
		    <customPortraitDrawSize>(1.08, 0.85)</customPortraitDrawSize>
		    <customPortraitHeadDrawSize>(1, 1)</customPortraitHeadDrawSize>
                    
                    <colorChannels>
                        <li>
                            <name>skin</name>
                            <first Class="ColorGenerator_Options">
                                <options>
                                    <li>
                                        <weight>10</weight>
                                        <only>RGBA(255, 241, 204, 255)</only>
                                    </li>
                                    <li>
                                        <weight>10</weight>
                                        <only>RGBA(250, 216, 177, 255)</only>
                                    </li>
                                    <li>
                                        <weight>5</weight>
                                        <only>RGBA(125, 100, 76, 255)</only>
                                    </li>
                                </options>
                            </first>
                            <second Class="ColorGenerator_Options">
                                <options>
                                    <li>
                                        <weight>10</weight>
                                        <only>RGBA(255, 255, 255, 255)</only>
                                    </li>
                                </options>
                            </second>
                        </li>
                    </colorChannels>
		              <headOffset>(0.0, -0.05)</headOffset>
               </alienPartGenerator>
            </generalSettings>
		
            <compatibility>
                <isFlesh>true</isFlesh>
                <isSentient>true</isSentient>
                <hasBlood>true</hasBlood>
            </compatibility>
		
        </alienRace>
        <race>	
          <thinkTreeMain>Humanlike</thinkTreeMain>
		      <thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
		      <intelligence>Humanlike</intelligence>
		      <makesFootprints>true</makesFootprints>
		      <lifeExpectancy>350</lifeExpectancy>
		      <leatherDef>Leather_Human</leatherDef>
		      <nameCategory>HumanStandard</nameCategory>
		      <body>Human</body>
		      <baseBodySize>1</baseBodySize>
		      <baseHealthScale>1.2</baseHealthScale>
		      <foodType>OmnivoreHuman</foodType>
		      <gestationPeriodDays>60</gestationPeriodDays>
		      <meatMarketValue>0.8</meatMarketValue>
		      <manhunterOnDamageChance>0.20</manhunterOnDamageChance>
		      <manhunterOnTameFailChance>0.02</manhunterOnTameFailChance>
		
		      <litterSizeCurve>
			      <points>
				      <li>(0.5, 0)</li>
				      <li>(1, 1)</li>
				      <li>(1.01, 0.02)</li>
				      <li>(3.5, 0)</li>
			      </points>
		      </litterSizeCurve>
		
		      <lifeStageAges>
			      <li>
				      <def>HumanlikeBaby</def>
			      	<minAge>0</minAge>
		      	</li>
		      	<li>
		      		<def>HumanlikeToddler</def>
		      		<minAge>10</minAge>
		      	</li>
		      	<li>
		      		<def>HumanlikeChild</def>
		      		<minAge>20</minAge>
		      	</li>
		      	<li>
			      	<def>HumanlikeTeenager</def>
			      	<minAge>30</minAge>
		      	</li>
		      	<li>
		      		<def>HumanlikeAdult</def>
		      		<minAge>40</minAge>
		      	</li>
				<!-- HAR lets you do something like the below which should change the Body Def at that life stage, not the Body Type. -->
				<!--<li Class="AlienRace.LifeStageAgeAlien">
					<def>AlienAdult</def>
