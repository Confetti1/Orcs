<?xml version="1.0" encoding="utf-8" ?>
<Defs>            
  <FactionDef ParentName="PlayerFactionBase" Name="DwarfColonyBase" Abstract ="True">
    <pawnSingular>dwarf</pawnSingular>
    <pawnsPlural>dwarves</pawnsPlural>
    <categoryTag>Outlander</categoryTag>
    <listOrderPriority>20</listOrderPriority>
    <settlementGenerationWeight>0</settlementGenerationWeight>
    <requiredCountAtGameStart>0</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canStageAttacks>true</canStageAttacks>
    <factionIconPath>Textures/Symbols/DwarfCamp</factionIconPath>
    <geneticVariance>0.1</geneticVariance>
    <factionNameMaker>NamerFactionOutlander</factionNameMaker>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <pawnNameMaker>NamerPersonDwarfMale</pawnNameMaker>
    <pawnNameMakerFemale>NamerPersonDwarfFemale</pawnNameMakerFemale>
    <techLevel>Medieval</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>Dwarf</li>
        </categories>
      </li>
    </backstoryFilters>
    <leaderTitle>King</leaderTitle>
    <hairTags>
      <li>Dwarf</li>
    </hairTags>
    <settlementTexturePath>World/WorldObjects/DwarfSettlement</settlementTexturePath>
    <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
      <li>Caravan_Outlander_PirateMerchant</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>-40~40</allowedArrivalTemperatureRange>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(0, 1)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <maxPawnCostPerTotalPointsCurve>
          <points>
            <li>(0,35)</li>
            <li>(70, 50)</li>
            <li>(800, 100)</li>
            <li>(1300, 150)</li>
            <li>(100000, 10000)</li>
          </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <Orc_Tribal>5</Orc_Tribal>
          <Orc_Tribal_Warrior>10</Orc_Tribal_Warrior>
          <Orc_Tribal_Archer>5</Orc_Tribal_Archer>
          <Orc_Tribal_Berserker>10</Orc_Tribal_Berserker>
          <Orc_Tribal_Chief>3</Orc_Tribal_Chief>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <Orc_Tribal_Archer>10</Orc_Tribal_Archer>
          <Orc_Tribal_Warrior>20</Orc_Tribal_Warrior>
          <Orc_Tribal_Berserker>10</Orc_Tribal_Berserker>
          <Orc_Tribal_Chief>3</Orc_Tribal_Chief>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Orc_Tribal_Trader>1</Orc_Tribal_Trader>
        </traders>
        <carriers>
          <Muffalo>6</Muffalo>
          <Dromedary>5</Dromedary>
          <Alpaca>2.5</Alpaca>
          <Elephant>2</Elephant>
        </carriers>
        <guards>
          <Orc_Tribal_Archer>10</Orc_Tribal_Archer>
          <Orc_Tribal_Warrior>20</Orc_Tribal_Warrior>
          <Orc_Tribal_Berserker>10</Orc_Tribal_Berserker>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Orc_Tribal>10</Orc_Tribal>
          <Orc_Tribal_Archer>10</Orc_Tribal_Archer>
          <Orc_Tribal_Warrior>20</Orc_Tribal_Warrior>
          <Orc_Tribal_Berserker>10</Orc_Tribal_Berserker>
          <Orc_Tribal_Chief>10</Orc_Tribal_Chief>
        </options>
      </li>
    </pawnGroupMakers>
  </FactionDef>
  
  <ThingSetMakerDef>
    <defName>DwarfColonyRaidLootMaker</defName>
    <root Class="ThingSetMaker_MarketValue">
      <fixedParams>
        <filter>
          <thingDefs>
            <li>Gold</li>
            <li>Silver</li>
            <li>Jade</li>
            <li>MedicineHerbal</li>
          </thingDefs>
        </filter>
      </fixedParams>
    </root>
  </ThingSetMakerDef>
  
  <FactionDef ParentName="DwarfColonyBase">
    <defName>PowerfulDwarves</defName>
    <label>powerful dwarf colony</label>
    <description>These dwarves revere power and strength over all else. They may tolerate you now, but eventually they will desire to show their strength over you unless you prove your colony useful.</description>
    <colorSpectrum>
      <li>(214, 172, 48)</li>
      <li>(48, 217, 214)</li>
    </colorSpectrum>
    <factionIconPath>World/WorldObjects/Expanding/DwarfCamp</factionIconPath>
    <startingGoodwill>0~50</startingGoodwill>
    <naturalColonyGoodwill>-50~0</naturalColonyGoodwill>
  </FactionDef>
</Defs>
