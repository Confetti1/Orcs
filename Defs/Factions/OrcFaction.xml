<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef ParentName="HumanFactionBase" Name="OrcTribeBase" Abstract ="True">
    <pawnSingular>orc</pawnSingular>
    <pawnPlural>orcs</pawnPlural>
    <categoryTag>Tribal</categoryTag>
    <listOrderPriority>19</listOrderPriority>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>0</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canStageAttacks>true</canStageAttacks>
    <factionIconPath>Textures/Symbols/OrcIcon</factionIconPath>
    <geneticVariance>0.1</geneticVariance>
    <factionNameMaker>NamerFactionTribal</factionNameMaker>
    <settlementNameMaker>NamerSettlementTribal</settlementNameMaker>
    <pawnNameMaker>NamerPersonTribal</pawnNameMaker>
    <pawnNameMakerFemale>NamerPersonTribal</pawnNameMaker>
    <techLevel>Neolithic</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>OrcTribal</li>
        </categories>
      </li>
    </backstoryFilters>
    <leaderTitle>chief</leaderTitle>
    <hairTags>
      <li>Tribal</li>
    </hairTags>
    <caravanTraderKinds>
      <li>Caravan_Neolithic_BulkGoods</li>
      <li>Caravan_Neolithic_WarMerchant</li>
      <li>Caravan_Neolithic_ShamanMerchant</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Neolithic_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Neolithic_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>-40~40</allowedArrivalTemperatureRange>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(0, 2)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <maxPawnCostPerTotalPointsCurve>
          <points>
            <li>(0,35)</li>
            <li>(70, 50)</li>
            <li>(800, 100)</li>
            <li>(1300, 150)</li>
            <li>(100000, 10000)</li>
          </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <Orc_Tribal>10</Orc_Tribal>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <Orc_Tribal>10</Orc_Tribal>
        </options>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Orc_Tribal>10</Orc_Tribal>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>Textures/Symbols/OrcIcon</settlementTexturePath>
  </FactionDef>

  <FactionDef ParentName="OrcTribeBase">
    <defName>RuggedOrcTribe</defName>
    <label>rugged orc tribe</label>
    <description>The orcs live off the land. Sometimes, when the land isn't giving enough, they resort to raids. An orc raid is a matter that is worth taking quite seriously.</description>
    <colorSpectrum>
      <li>(150, 16, 16)</li>
      <li>(80, 110, 30)</li>
    </colorSpectrum>
    <factionIconPath>Textures/Symbols/OrcIcon</factionIconPath>
    <startingGoodwill>5</startingGoodwill>
    <naturalColonyGoodwill>-100~-50</naturalColonyGoodwill>
  </FactionDef>
  
</Defs>
