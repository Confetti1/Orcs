  <ThingDef ParentName="ApparelNoQualityBase">
    <defName>RingOfProtectionPlusOne</defName>
    <label>ring of protection +1</label>
    <description>This magical ring shields it's wearer's entire body with a thin layer of force.</description>
   <!-- <thingClass>ShieldBelt</thingClass> -->
    <graphicData>
      <texPath>Item/Equipment/Apparel/RingOfProtection</texPath>
