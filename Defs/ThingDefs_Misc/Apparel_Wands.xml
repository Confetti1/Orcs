<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelNoQualityBase">
    <defName>Apparel_WandOfFireball</defName>
    <label>wand of fireball</label>
    <description>A wand loaded with a Fireball spell. This causes a tiny mote of light to fly toward the casting target, which then violently erupts in a burst of flame. Be wary where you aim it!
    
    Like all wands, it has limited uses. This wand comes with 10 charges.</description>
    <graphicData>
      <texPath>Things/Item/Artifact/PsychicShockLance</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <tradeTags>
      <li>Artifact</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
    <statBases>
      <Mass>0.5</Mass>
      <EquipDelay>2</EquipDelay>
      <MarketValue>600</MarketValue>
      <MaxHitPoints>80</MaxHitPoints>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <tickerType>Normal</tickerType>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <apparel>
      <scoreOffset>4</scoreOffset>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <wearPerDay>0</wearPerDay>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
    </apparel>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <tradeNeverStack>true</tradeNeverStack>
    <smeltable>false</smeltable>
    <burnableByRecipe>false</burnableByRecipe>
    
    <drawGUIOverlay>false</drawGUIOverlay>
    <verbs>
      <li>
        <verbClass>Verb_LaunchProjectile</verbClass>
        <label>wand of fireball</label>
        <hasStandardCommand>true</hasStandardCommand>
        <forcedMissRadius>1.9</forcedMissRadius>
        <targetable>true</targetable>
        <onlyManualCast>True</onlyManualCast>
        <range>30</range>
        <warmupTime>2</warmupTime>
        
        <targetParams>
          <canTargetBuildings>true</canTargetBuildings>
          <onlyTargetPsychicSensitive>false</onlyTargetPsychicSensitive>
          <canTargetLocations>true</canTargetLocations>
          <neverTargetIncapacitated>false</neverTargetIncapacitated>
        </targetParams>
        <defaultProjectile>Fireball</defaultProjectile>
        <soundCast>PsychicShockLanceCast</soundCast>
      </li>
    </verbs>
    
    <comps>
      <li Class="CompProperties_Reloadable">
        <maxCharges>10</maxCharges>
        <destroyOnEmpty>true</destroyOnEmpty>
        <hotKey>Misc4</hotKey>
        <chargeNoun>charge</chargeNoun>
        <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Fireball</defName>
    <label>fireball</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Flame</damageDef>
      <explosionRadius>5</explosionRadius>
      <damageAmountBase>12</damageAmountBase>
      <ai_IsIncendiary>true</ai_IsIncendiary>
      <stoppingPower>1</stoppingPower>
      <explosionDelay>1</explosionDelay>
      <speed>40</speed>
    </projectile>
  </ThingDef>
</Defs>
