<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<PawnKindDef>
  <defName>Orc</defName>
  <label>Orc</label>
  <race>Orc</race>
  <backstoryFiltersOverride>
    <li>
      <categories>
        <li>CityRaised</li>
      </categories>
    </li>
  </backstoryFiltersOverride>
  <pawnKindSettings>
    <alienslavekinds>
      <li>
        <kindDefs>
          <li>Orc</li>
        </kindDefs>
        <chance>10.0</chance>
      </li>
    </alienslavekinds>
    
    <alienrefugeekinds>
      <li>
        <kindDefs>
          <li>Orc</li>
        </kindDefs>
        <chance>10.0</chance>
      </li>
    </alienrefugeekinds>
    
    <startingColonists>
      <li>
        <pawnKindEntries>
          <li>
            <kindDefs>
              <li>Orc</li>
            </kindDefs>
            <chance>10.0</chance>
          </li>
        </pawnKindEntries>
        <factionDefs>
          <li>PlayerColony</li>
        </factionDefs>
      </li>
    </startingColonists>
    
    <alienwandererkinds>
      <li>
        <pawnKindEntries>
          <li>
            <kindDefs>
              <li>Orc</li>
            </kindDefs>
            <chance>10.0</chance>
          </li>
        </pawnKindEntries>
        <factionDefs>
          <li>PlayerColony</li>
        </factionDefs>
      </li>
    </alienwandererkinds>
  </pawnKindSettings>
  
  <modExtensions>
    <li Class="AlienRace.Info">
      <allowHumanBios>true</allowHumanBios>
      <maleGenderProbability>50</maleGenderProbability>
    </li>
  </modExtensions>
</PawnKindDef>

<AlienRace.BackstoryDef>
  <defName>CityRaised</defName>
  <title>Raised in the City</title>
  <titleShort>Civilized</titleShort>
  <baseDescription>NAME was born and raised by civilized folks in the city. Pawn_pronoun learned the ways of proper behavior, and shun the tribal ways of others of their kind.</baseDescription>
  <bodyTypeMale>Male</bodyTypeMale>
  <bodyTypeFemale>Female</bodyTypeFemale>
  <slot>Childhood</slot>
  <spawnCategories>
    <li>CityRaised</li>
  </spawnCategories>
  <skillGains>
    <li>
      <defName>Social</defName>
      <amount>4</amount>
    </li>
    <li>
      <defName>Intellectual</defName>
      <amount>4</amount>
    </li>
    <li>
      <defName>Melee</defName>
      <amount>-4</amount>
    </li>
  </skillGains>
  <disallowedTraits>
    <li>
      <defname>Bloodlust</defname>
    </li>
  </disallowedTraits>
</AlienRace.BackstoryDef>
</Defs>
